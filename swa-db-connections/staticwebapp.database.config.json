      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    },
    "GetInvoiceCountCountryWise": {
      "source": {
	    "object": "GetInvoiceCountCountryWise",
		"type":"stored-procedure"
	  },
	  "rest":{
	    "methods":["GET"]
	  },
	  "graphql":{
	    "operation":"query"
	  },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    }
  }
}
